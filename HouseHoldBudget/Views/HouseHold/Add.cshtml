@using HouseHoldBudget.Infrastructure.Data
@model HouseHoldBudget.Core.Models.HouseHolds.AddViewModel
@{
    ViewBag.Title = "Choose existing Household";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.HouseholdId" class="form-label">Household</label>
                <select asp-for="@Model.HouseholdId" class="form-control">
                
                    @foreach (var household in Model.HouseHolds)
                    {
                        <option value="@household.Id">@household.Name</option>
                    }
                </select>
                <span asp-validation-for="HouseholdId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>



